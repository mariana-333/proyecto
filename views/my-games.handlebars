<script>
function copyLink(button) {
    const input = button.previousElementSibling;
    input.select();
    input.setSelectionRange(0, 99999);
    
    try {
        document.execCommand('copy');
        const originalContent = button.textContent;
        button.textContent = '✅';
        button.style.backgroundColor = '#4CAF50';
        
        setTimeout(() => {
            button.textContent = originalContent;
            button.style.backgroundColor = '';
        }, 2000);
    } catch (err) {
        alert('No se pudo copiar. Selecciona y copia manualmente.');
    }
}

// Variables para manejar la eliminación de partidas
let gameToDelete = null;

function deleteGame(gameId) {
    gameToDelete = gameId;
    const modal = document.getElementById('delete-game-modal');
    modal.classList.add('show');
}

// Manejadores del modal de eliminación
document.addEventListener('DOMContentLoaded', function() {
    const modal = document.getElementById('delete-game-modal');
    const confirmButton = document.getElementById('confirm-delete');
    const cancelButton = document.getElementById('cancel-delete');

    // Confirmar eliminación
    confirmButton.addEventListener('click', async function() {
        if (!gameToDelete) return;

        try {
            // Mostrar estado de carga
            confirmButton.textContent = '🔄 Eliminando...';
            confirmButton.disabled = true;

            const response = await fetch(`/delete-game/${gameToDelete}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            const result = await response.json();

            if (result.success) {
                // Mostrar mensaje de éxito
                confirmButton.textContent = '✅ Eliminado';
                
                setTimeout(() => {
                    // Cerrar modal y recargar página
                    modal.classList.remove('show');
                    location.reload();
                }, 1000);
            } else {
                // Mostrar error
                alert(`❌ Error: ${result.message}`);
                
                // Restaurar botón
                confirmButton.textContent = '🗑️ Sí, eliminar';
                confirmButton.disabled = false;
            }
        } catch (error) {
            console.error('Error al eliminar partida:', error);
            alert('❌ Error de conexión. Inténtalo de nuevo.');
            
            // Restaurar botón
            confirmButton.textContent = '🗑️ Sí, eliminar';
            confirmButton.disabled = false;
        }
    });

    // Cancelar eliminación
    cancelButton.addEventListener('click', function() {
        modal.classList.remove('show');
        gameToDelete = null;
        
        // Restaurar botón de confirmación
        confirmButton.textContent = '🗑️ Sí, eliminar';
        confirmButton.disabled = false;
    });

    // Cerrar modal al hacer clic fuera
    modal.addEventListener('click', function(e) {
        if (e.target === modal) {
            modal.classList.remove('show');
            gameToDelete = null;
            
            // Restaurar botón de confirmación
            confirmButton.textContent = '🗑️ Sí, eliminar';
            confirmButton.disabled = false;
        }
    });

    // Cerrar modal con tecla Escape
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && modal.classList.contains('show')) {
            modal.classList.remove('show');
            gameToDelete = null;
            
            // Restaurar botón de confirmación
            confirmButton.textContent = '🗑️ Sí, eliminar';
            confirmButton.disabled = false;
        }
    });
});
</script>
